<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_S">

    <ImageView
        android:id="@+id/iv_carousel_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/mcoerc_logo" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_S"
        android:layout_toEndOf="@+id/iv_carousel_image"
        android:layout_toRightOf="@+id/iv_carousel_image"
        android:padding="@dimen/padding_S"
        android:fontFamily="@font/karma"
        android:textSize="@dimen/text_large"
        android:textStyle="bold"
        android:textColor="@color/color_secondary"
         />

    <TextView
        android:id="@+id/tv_logo_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_carousel_image"
        android:layout_alignStart="@+id/iv_carousel_image"
        android:layout_alignEnd="@+id/iv_carousel_image"
        android:textAlignment="center"
        android:fontFamily="@font/noto_sans_font"
        android:textSize="@dimen/text_medium"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="MCOERC"
        android:gravity="center_horizontal"
        android:layout_alignRight="@+id/iv_carousel_image"
        android:layout_alignLeft="@+id/iv_carousel_image" />

    <TextView
        android:id="@+id/tv_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/iv_carousel_image"
        android:layout_toRightOf="@+id/iv_carousel_image"
        android:fontFamily="@font/noto_sans"
        android:textSize="@dimen/text_medium"
        android:padding="@dimen/padding_S"/>

</RelativeLayout>